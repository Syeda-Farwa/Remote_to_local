<?php
session_start();
include 'config.php';

// ✅ Redirect if user not logged in
if (!isset($_SESSION['user_id'])) {
    header("Location: user_login.php");
    exit();
}

$user_id = $_SESSION['user_id'];

// ✅ Fetch only Approved bookings (with error handling)
$sql = "SELECT b.*, m.title, m.image, m.description 
        FROM booking b
        JOIN movies m ON b.movie_id = m.movie_id
        WHERE b.user_id = $user_id 
        AND b.admin_status = 'Approved'
        ORDER BY b.created_at DESC";  // ✅ changed from booking_date → created_at

$result = mysqli_query($connection, $sql) or die("SQL Error: " . mysqli_error($connection));
?>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>🎟️ My Approved Bookings</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #0f0f1c; color: white; }
    .booking-card {
      background: #1c1b2f;
      border-radius: 15px;
      padding: 20px;
      margin-bottom: 20px;
    }
    .movie-img {
      width: 100%;
      max-width: 200px;
      height: 120px;
      object-fit: cover;
      border-radius: 10px;
    }
  </style>
</head>
<body> 
    <?php
     include'navbar.php'
     ?>
<div class="container py-5">
  <h2 class="mb-4 text-center">🎟️ My Approved Bookings</h2>

  <?php if (mysqli_num_rows($result) > 0) { ?>
    <?php while ($row = mysqli_fetch_assoc($result)) { ?>
      <div class="booking-card d-flex align-items-center">
        <img src="<?php echo htmlspecialchars($row['image']); ?>" class="movie-img me-3" alt="Movie Poster">
        <div>
          <h5><?php echo htmlspecialchars($row['title']); ?></h5>
          <p><?php echo htmlspecialchars($row['description']); ?></p>
          <p><strong>Tickets:</strong> <?php echo $row['tickets']; ?></p>
          <p><strong>Payment:</strong> <?php echo $row['payment_method']; ?> (<?php echo $row['payment_status']; ?>)</p>
          <p><strong>Date:</strong> <?php echo $row['created_at']; ?></p>
        </div>
      </div>
    <?php } ?>
  <?php } else { ?>
    <div class="alert alert-warning text-center">
      No approved bookings yet. ⏳ Please wait for admin approval.
    </div>
  <?php } 
  include'footer.php'?>
</div>
</body>
</html>
